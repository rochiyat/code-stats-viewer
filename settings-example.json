{
  "configurations": [
    {
      "name": "React/Next.js Project",
      "description": "Configuration for React and Next.js applications",
      "settings": {
        "codeStatsViewer.excludeDirs": [
          "node_modules",
          ".next",
          "out",
          "build",
          "dist",
          ".vercel",
          "coverage",
          ".cache"
        ],
        "codeStatsViewer.excludePatterns": [
          "*.min.js",
          "*.min.css",
          "*.test.js",
          "*.test.jsx",
          "*.spec.js",
          "*.spec.jsx",
          "*.map"
        ],
        "codeStatsViewer.includedExtensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".css",
          ".scss",
          ".json"
        ]
      }
    },
