  "usage": {
    "description": "Copy the settings object from any configuration above and paste it into your VS Code settings.json file (Workspace or User settings)",
    "steps": [
      "1. Open VS Code Settings: File > Preferences > Settings (or Ctrl+,)",
      "2. Click the '{}' icon in the top-right to open settings.json",
      "3. Copy the desired settings from above",
      "4. Paste into your settings.json",
      "5. Save the file - Code Stats Viewer will auto-refresh"
    ]
  },
  "customization": {
    "excludeDirs": {
      "description": "Add directory names that should be completely skipped during analysis",
      "examples": [
        "node_modules - npm packages",
        "vendor - Composer/Go packages",
        "target - Java build output",
        "dist - Build output",
        "__pycache__ - Python cache"
      ]
    },
    "excludePatterns": {
      "description": "Add file patterns using wildcards (* = any chars, ? = single char)",
      "examples": [
        "*.min.js - Minified JavaScript",
        "*.test.* - Test files",
        "temp-* - Temporary files",
        "*-backup.* - Backup files"
      ]
    },
    "includedExtensions": {
      "description": "Only files with these extensions will be analyzed",
      "tip": "Add custom extensions like .proto, .graphql, .yaml, etc."
    }
  }
}
